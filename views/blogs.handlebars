<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center rounded-top">
            <h1 class="mb-0">{{title}}</h1>
            <span class="text-muted">Created on: {{format_date date_created}}</span>
        </div>
        <div class="card-body">
            <p>{{contents}}</p>
        </div>
        <div class="card-footer text-muted d-flex justify-content-between align-items-center">
            <p>Posted By: {{user.name}}</p>
            <button id="add-comment-button" class="btn btn-primary">Add Comment</button>
        </div>
    </div>
    <div id="comment-form" class="mt-2" style="display: none;">
        <div class="card">
            <div class="card-body">
                <form id="new-comment-form">
                    <input type="hidden" id="blog-id" value="{{id}}">
                    <div class="form-group">
                        <label for="comment-content">Your Comment</label>
                        <textarea id="comment-content" class="form-control" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Submit Comment</button>
                </form>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="mt-4">
            <h3>Comments:</h3>
            {{#each comments}}
            <div class="card mt-2">
                <div class="card-body">
                    <p>{{content}}</p>
                    <div class="d-flex justify-content-between align-items-end mt-2 pt-2 border-top">
                        <p class="text-muted">Commented by: {{user.name}} on {{format_date date_created}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="/js/comment.js"></script>