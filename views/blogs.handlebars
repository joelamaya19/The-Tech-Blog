<div class="container mt-4">
    <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center rounded-top">
                <h1 class="mb-0">{{title}}</h1>
                <span class="text-muted">Created on: {{format_date date_created}}</span>
            </div>
        <div class="card-body">
            <h4>Description:</h4>
            <p>{{contents}}</p>
        </div>
        <div class="card-footer text-muted d-flex justify-content-between align-items-center">
            <p>Posted By: {{user.name}}</p>
        </div>
    </div>
    <div class="mt-4">
        <h3>Comments:</h3>
        {{#each comments}}
        <div class="card mt-2">
            <div class="card-body">
                <p>{{content}}</p>
                <p class="text-muted">Commented by: {{user.name}} on {{format_date date_created}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="/js/addComment.js"></script>