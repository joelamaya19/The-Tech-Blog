{{#each blogs as |blog|}}
<div class="container mt-4">
  <div class="card">
    <a class="text-decoration-none" href="/blogs/{{id}}">
      <div class="card-header d-flex justify-content-between align-items-center rounded-top">
        <h1 class="mb-0">{{title}}</h1>
        <span class="text-muted">Created on: {{format_date date_created}}</span>
      </div>
    </a>
    <div class="card-body">
      <p>{{contents}}</p>
    </div>
    <div class="card-footer text-muted">
      <p>Posted By: {{user.name}}</p>
    </div>
  </div>
</div>
{{/each}}